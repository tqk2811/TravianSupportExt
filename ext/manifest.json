{
    "manifest_version": 3,
    "name": "Travian Support",
    "description": "Travian Support",
    "version": "0.0.1",
    "permissions": [
        "webRequest",
        "activeTab",
        "tabs"
    ],
    "background": {
        "service_worker": "/js/BackGround.js"
    },
    "content_scripts": [
        {
            "all_frames": false,
            "run_at": "document_idle",
            "matches": [
                "https://*.travian.com/*"
            ],
            "js": [
                "/js/Inject.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "https://*.travian.com/*"
            ],
            "resources": [
                "/res/*",
                "/js/*",
                "/css/*",
                "/libs/*"
            ]
        }
    ]
}