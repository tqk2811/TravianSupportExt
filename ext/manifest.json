{
    "name": "Travian Support",
    "description": "Travian Support",
    "version": "0.0.1",
    "permissions": [ 
    ],
    "manifest_version": 3,
    "content_scripts" : [
        {
            "run_at" : "document_start",
            "matches": [
                "https://*.travian.com/*"
            ],
            "js": [
                "/js/jquery-3.6.0.min.js",
                "/js/DataManagers/VillageData.js",
                "/js/DataManagers/AccountData.js",
                "/js/DataManagers/ServerData.js",

                "/js/Prototypes.js",
                "/js/CurrentInstance.js",
                "/js/HotKeys.js",
                "/js/TsTimerElement.js",
                
                "/js/Travian/Statistics.js",
                "/js/Travian/Global.js"
            ]
        },
        {
            "run_at" : "document_idle",
            "matches": [
                "https://*.travian.com/*"
            ],
            "css":[
                "css/TS.css"
            ],
            "js": [
                "/js/App.js"
            ]
        }
    ],
    "web_accessible_resources":[
        {
            "resources": [ "/res/*" ],
            "matches": [ "https://*.travian.com/*" ]
        }
    ]
}