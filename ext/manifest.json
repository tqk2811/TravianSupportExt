{
    "manifest_version": 3,
    "name": "Travian Support",
    "description": "Travian Support",
    "version": "0.0.1",
    "declarative_net_request": {
        "rule_resources": [{
          "id": "ruleset_1",
          "enabled": true,
          "path": "blockRule.json"
        }]
    },
    "permissions": [        
        "declarativeNetRequest"
    ],
    "background": {
        "service_worker": "/js/BackGround.js"
    },
    "content_scripts" : [
        {
            "run_at" : "document_idle",
            "matches": [
                "https://*.travian.com/*"
            ],
            "css":[
                "css/TS.css"
            ],
            "js": [
                "/js/Inject.js"
            ]
        }
    ],
    "web_accessible_resources":[
        {
            "resources": [ "/res/*", "/js/*" ],
            "matches": [ "https://*.travian.com/*" ]
        }
    ]
}