{
    "name": "Travian Support",
    "description": "Travian Support",
    "version": "0.0.1",
    "permissions": [ 
    ],
    "manifest_version": 3,
    "content_scripts" : [
        {
            "run_at" : "document_idle",
            "matches": [
                "https://*.travian.com/*"
            ],
            "css":[
                "css/TS.css"
            ],
            "js": [
                "/js/Inject.js"
            ]
        }
    ],
    "web_accessible_resources":[
        {
            "resources": [ "/res/*", "/js/*" ],
            "matches": [ "https://*.travian.com/*" ]
        }
    ]
}